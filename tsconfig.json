{
  "compilerOptions": {
    "module": "commonjs",                             
    "target": "ES2017",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,                               
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "resolveJsonModule": true,                        
    "sourceMap": false,                                
    "rootDir": ".",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": false,                          
    "skipLibCheck": true,
    "types": ["reflect-metadata","node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@providers/*": ["providers/*"],
      "@repositories/*": ["repositories/*"],
      "@useCases/*": ["useCases/*"]
    },                         
  },
  "include": [
    ".",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*"
  ]
}